<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class='stats'>
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class='col-md-8'>
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Management Paper</h1>

    <h2>
      大学院生による、研究管理アプリケーション
    </h2>

    <span>
      <%= link_to "Log in now!", login_path, class: 'btn btn-lg btn-primary' %>
    </span>
    <span>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-success" %>    
    </span>
  </div>

  <!-- 後日、イメージタグを変更する -->
  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200px"),
              "https://rubyonrails.org/" %>
<% end %>