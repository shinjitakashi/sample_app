<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>

  <span class='title'>
    <p class='name'>
      Title
    </p>
    <%= micropost.title %>
  </span>

  <% if false %>  
    <span class="content">
      <p class='name'>
      Content
      </p>
      <%= micropost.content %>
    </span>
  <% end %>
  <span class="content">
    <p class='name'>
    新規性
    </p>
    <%= micropost.newcontent %>
  </span>
  <span class="content">
    <p class='name'>
    メイン研究成果
    </p>
    <%= micropost.mainresult %>
  </span>
  <span class="content">
    <p class='name'>
    条件
    </p>
    <%= micropost.condition %>
  </span>  
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>